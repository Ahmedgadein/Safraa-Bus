<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    app:isPreferenceVisible="false"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="personal"
        app:title="Personal">

        <Preference
            app:key="name"
            app:title="Name"
            app:defaultValue="NA"/>

        <Preference
            app:key="phone"
            app:title="Phone Number"
            app:defaultValue="NA"/>
    </PreferenceCategory>
    <PreferenceCategory
        app:key="company"
        app:title="Company Info">

        <Preference
            app:key="companyName"
            app:title="Company"
            app:defaultValue="NA"/>
        <Preference
            app:key="location"
            app:title="Location"
            app:defaultValue="NA"/>
    </PreferenceCategory>
</PreferenceScreen>